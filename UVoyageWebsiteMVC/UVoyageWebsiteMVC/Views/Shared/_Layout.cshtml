   <!-- UVOYAGE HOME PAGE -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UVoyage Project</title>
    <link href="~/css/site.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <!-- DROPDOWN MENU START -->
    @if (ViewData["Title"] != "Playing Minigame"){
    <div class="dropdown-menu">
        <h1><a asp-controller="Home" asp-action="Index">UVoyage Project</a></h1>
        <a asp-controller="Home" asp-action="Index">
            <div class="dropdown">
                <button class="dropbtn">Home</button>
            </div>
        </a>
        <a asp-controller="Films" asp-action="filmsMain">
        <div class="dropdown">
            <button class="dropbtn">Films</button>
        </div>
        </a>
        <a asp-controller="Minigames" asp-action="minigameMain">
            <div class="dropdown">
                <button class="dropbtn">Minigames</button>
            </div>
        </a>
        <a asp-controller="Technology" asp-action="technologyMain">
            <div class="dropdown">
                <button class="dropbtn">Technology</button>

            </div>
        </a>
        <div class="dropdown">
            <button class="dropbtn">More</button>
            <div class="dropdown-content">
                <a asp-controller="More" asp-action="ourMembers">Our Members</a>
                <a asp-controller ="More" asp-action="ourTeams">Our Teams</a>
                <a asp-controller="More" asp-action="ourStory">Our Story</a>
            </div>
        </div>
        <a asp-controller="ContactUs" asp-action="contactUs">
            <div class="dropdown">
                <button class="dropbtn">Contact Us</button>
            </div>
        </a>
    </div>
    }
    @RenderBody()
    @if (ViewBag.Title != "Playing Minigame"){
    <footer>
        <div class="footerin">
            <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            <p>Follow Us:</p>            
            <p class="footertitle">The UVoyage Project</p>
            <i class="fa fa-instagram" style="font-size:36px"></i>
            <br /><br /><br /><br /><br /><br /><br /><br /><br />
        </div>
    </footer>
    }

</body>
</html>